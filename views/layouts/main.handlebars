<body>
	<div class="jumbotron jumbotron-fluid text-center" id="jumbotronId">
		<div class="container">
			<img src="/assets/img/taco-title.png">
			<img src="/assets/img/taco-truck.png" alt="HTML5 Icon" title="Icons made by Freepik from www.flaticon.com">
			{{{ body }}}
		</div>
	</div>

	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<div class="card">
					<div class="card-header">
						Place Order
					</div>
					<div class="card-body">
						<div class="container-fluid">
							<div class="form-group">
								<input type="text" class="form-control" id="orderID" />
							</div>
							</br>
							<button type="button" class="btn bg-light" id="orderButton">Send</button>
